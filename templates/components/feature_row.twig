{% extends "components/base.twig" %}

{% block class %}m--feature-row py-16 w-full {{ module.theme|join(' ') }}{% endblock %}

{% block inner %}
  <div class="container mx-auto px-4">
    {% if module.title %}<header class="mb-8"><h2 class="font-bold text-2xl">{{ module.title }}</h2></header>{% endif %}
    <div class="w-full md:flex md:-mx-4 md:justify-center">
      {% for item in module.items %}
      {% set link = item.link %}
      <article class="md:px-4 flex flex-col items-center text-center md:w-1/4">
        <a class="block w-20 h-20 rounded-full mb-8" href="{{ link.url }}" target="{{ link.target }}"{% if link.target == '_blank' %} rel="noopener"{% endif %} aria-label="Go to {{ link.title }}">
          {% if item.image %}
          <img src="{{ item.image.sizes['thumbnail'] }}" srcset="{{ item.image.sizes['thumbnail'] | retina(2) }} 2x" alt="" class="block rounded-full" />
          {% else %}
          <img src="data:image/png;base64, {{ placeholder.profile }}" class="block rounded-full">
          {% endif %}
        </a>
        {% if item.header %}<h3></h3>
        <header class="mb-4">
          <h3 class="text-2xl font-bold"><a href="{{ link.url }}" target="{{ link.target }}"{% if link.target == '_blank' %} rel="noopener"{% endif %} aria-label="Go to {{ link.title }}">{{ item.header }}</a></h3>
        </header>
        {% endif %}
        {% if item.excerpt %}
        <div class="mb-8 md:mb-0">
          <p>{{ item.excerpt }}</p>
        </div>
        {% endif %}
      </article>
      {% endfor %}
    </div>
  </div>
{% endblock %}