{% extends "base.twig" %}

{% block content %}

    {% block pagebanner %}
    <div class="py-16 md:py-32 text-center bg-gray-200 w-full">
      <div class="container mx-auto px-4">
        <div class="md:w-3/4 mx-auto">
          <h1 class="mb-8 text-5xl font-semibold">{{ post.title }}</h1>
        </div>
      </div>
    </div>
    {% endblock %}

    <div class="container mx-auto px-4 my-16">
      <div class="md:flex md:-mx-4">

        <aside class="md:w-1/3 lg:w-1/4 md:px-4" role="complementary">
          {% block sidebar %}
            {% include "partial/sidebar-share.twig" %}
          {% endblock %}
        </aside>

        <article class="md:w-2/3 lg:w-1/2 md:px-4">
          {{ post.content }}
        </article>

      </div>
    </div>

    {% for module in post.meta('modules') %}
      {% include "components/#{module.acf_fc_layout}.twig" with module %}
    {% endfor %}

{% endblock %}